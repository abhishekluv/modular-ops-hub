@model CompanyUpsertVm
@{
    ViewData["Title"] = "Create Company";
}

<h2>Create Company</h2>

<form method="post" asp-area="CRM" asp-controller="Companies" asp-action="Create">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <partial name="_CompanyForm" model="Model" />

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Save</button>
        <a class="btn btn-outline-secondary" asp-area="CRM" asp-controller="Companies" asp-action="Index">
            Cancel
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
