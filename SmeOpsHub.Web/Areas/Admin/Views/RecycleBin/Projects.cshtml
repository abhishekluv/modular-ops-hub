@model IReadOnlyList<RecycleItemVm>
@{
    ViewData["Title"] = "Recycle Bin - Projects";
}

<h2>Recycle Bin</h2>
<partial name="_Tabs" />

@if (Model.Count == 0)
{
    <div class="alert alert-info">No deleted projects.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Project</th>
                <th>Deleted At</th>
                <th>Deleted By</th>
                <th class="text-end" style="width: 160px;">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-semibold">@item.Title</td>
                    <td>@(item.DeletedAt?.ToString("yyyy-MM-dd HH:mm") ?? "-")</td>
                    <td>@(item.DeletedBy ?? "-")</td>
                    <td class="text-end">
                        <form method="post" asp-area="Admin" asp-controller="RecycleBin" asp-action="RestoreProject" asp-route-id="@item.Id">
                            @Html.AntiForgeryToken()
                            <button class="btn btn-sm btn-outline-success" type="submit">Restore</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
