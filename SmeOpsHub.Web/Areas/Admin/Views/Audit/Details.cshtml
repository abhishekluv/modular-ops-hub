@model AuditEvent
@{
    ViewData["Title"] = "Audit Details";
}

<h2>Audit Details</h2>

<div class="card">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Occurred (UTC)</dt>
            <dd class="col-sm-9">@Model.OccurredAtUtc</dd>

            <dt class="col-sm-3">Action</dt>
            <dd class="col-sm-9">@Model.Action</dd>

            <dt class="col-sm-3">Entity</dt>
            <dd class="col-sm-9">@Model.EntityType (@Model.EntityId)</dd>

            <dt class="col-sm-3">Module</dt>
            <dd class="col-sm-9">@Model.Module</dd>

            <dt class="col-sm-3">User</dt>
            <dd class="col-sm-9">@Model.UserName (@Model.UserId)</dd>

            <dt class="col-sm-3">TraceId</dt>
            <dd class="col-sm-9">@Model.TraceId</dd>

            <dt class="col-sm-3">Summary</dt>
            <dd class="col-sm-9">@Model.Summary</dd>
        </dl>

        @if (!string.IsNullOrWhiteSpace(Model.DataJson))
        {
            <hr />
            <h5>Data</h5>
            <pre class="mb-0">@Model.DataJson</pre>
        }
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-outline-secondary" asp-area="Admin" asp-controller="Audit" asp-action="Index">Back</a>
</div>
