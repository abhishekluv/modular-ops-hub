@model IReadOnlyList<ProjectListItemVm>
@{
    ViewData["Title"] = "Projects";
    var showDeleted = (bool)(ViewBag.ShowDeleted ?? false);
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="mb-0">Projects</h2>
    </div>  
</div>

<div class="d-flex gap-2">
    <a class="btn btn-primary" asp-area="Projects" asp-controller="Projects" asp-action="Create">
        Create Project
    </a>

    @if (!showDeleted)
    {
        <a class="btn btn-outline-secondary"
           asp-area="Projects" asp-controller="Projects" asp-action="Index" asp-route-showDeleted="true">
            Show deleted
        </a>
    }
    else
    {
        <a class="btn btn-outline-secondary"
           asp-area="Projects" asp-controller="Projects" asp-action="Index">
            Hide deleted
        </a>
    }
</div>

@if (Model.Count == 0)
{
    <div class="alert alert-info">
        No projects yet.
    </div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Name</th>
                <th>Status</th>
                <th class="text-center">Tasks</th>
                <th>Status</th>
                <th class="text-end" style="width: 320px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td class="fw-semibold">@p.Name</td>
                    <td>@p.Status</td>
                    <td class="text-center">@p.TasksCount</td>
                    <td>
                        @if (p.IsDeleted)
                        {
                            <span class="badge bg-danger">Deleted</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Active</span>
                        }
                    </td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-secondary"
                           asp-area="Projects" asp-controller="Projects" asp-action="Details" asp-route-id="@p.Id">
                            Open
                        </a>

                        <a class="btn btn-sm btn-outline-primary"
                           asp-area="Projects" asp-controller="Projects" asp-action="Edit" asp-route-id="@p.Id">
                            Edit
                        </a>

                        @if (!p.IsDeleted)
                        {
                            <form class="d-inline" method="post"
                                  asp-area="Projects" asp-controller="Projects" asp-action="SoftDelete" asp-route-id="@p.Id">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-danger"
                                        onclick="return confirm('Soft delete this project?');">
                                    Soft Delete
                                </button>
                            </form>
                        }
                        else
                        {
                            <form class="d-inline" method="post"
                                  asp-area="Projects" asp-controller="Projects" asp-action="Restore" asp-route-id="@p.Id">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-success">
                                    Restore
                                </button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
