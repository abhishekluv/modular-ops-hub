@model TaskUpsertVm
@{
    ViewData["Title"] = "Edit Task";
    var projectId = (Guid)ViewBag.ProjectId;
    var taskId = (Guid)ViewBag.TaskId;
}

<h2>Edit Task</h2>

<form method="post"
      asp-area="Projects" asp-controller="Tasks" asp-action="Edit"
      asp-route-id="@taskId" asp-route-projectId="@projectId">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <partial name="_TaskForm" model="Model" />

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Save</button>
        <a class="btn btn-outline-secondary"
           asp-area="Projects" asp-controller="Projects" asp-action="Details"
           asp-route-id="@projectId">
            Cancel
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
