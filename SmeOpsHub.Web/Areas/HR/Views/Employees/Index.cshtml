@model IReadOnlyList<EmployeeListItemVm>
@{
    ViewData["Title"] = "Employees";
    var showDeleted = (bool)(ViewBag.ShowDeleted ?? false);
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="mb-0">Employees</h2>
    </div>
</div>

<div class="d-flex gap-2 mb-3">
    <a class="btn btn-primary" asp-area="HR" asp-controller="Employees" asp-action="Create">Add Employee</a>

    @if (!showDeleted)
    {
        <a class="btn btn-outline-secondary" asp-area="HR" asp-controller="Employees" asp-action="Index" asp-route-showDeleted="true">Show deleted</a>
    }
    else
    {
        <a class="btn btn-outline-secondary" asp-area="HR" asp-controller="Employees" asp-action="Index">Hide deleted</a>
    }

    <a class="btn btn-outline-secondary" asp-area="HR" asp-controller="LeaveRequests" asp-action="Index">Leave Requests</a>
</div>

@if (Model.Count == 0)
{
    <div class="alert alert-info">No employees yet.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Department</th>
                <th>Join Date</th>
                <th>Status</th>
                <th class="text-end" style="width: 280px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model)
            {
                <tr>
                    <td class="fw-semibold">@e.FullName</td>
                    <td>@e.Email</td>
                    <td>@(e.Department ?? "-")</td>
                    <td>@e.JoinDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        @if (e.IsDeleted)
                        {
                            <span class="badge bg-danger">Deleted</span>
                        }
                        else
                        {

                            <span class="badge bg-success">Active</span>
                        }
                    </td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-primary"
                           asp-area="HR" asp-controller="Employees" asp-action="Edit" asp-route-id="@e.Id">Edit</a>

                        <a class="btn btn-sm btn-outline-secondary"
                           asp-area="HR" asp-controller="LeaveRequests" asp-action="Index" asp-route-employeeId="@e.Id">Leaves</a>

                        @if (!e.IsDeleted)
                        {
                            <form class="d-inline" method="post"
                                  asp-area="HR" asp-controller="Employees" asp-action="SoftDelete" asp-route-id="@e.Id">
                                @Html.AntiForgeryToken()
                                <button class="btn btn-sm btn-outline-danger" type="submit"
                                        onclick="return confirm('Soft delete this employee?');">
                                    Soft Delete
                                </button>
                            </form>
                        }
                        else
                        {
                            <form class="d-inline" method="post"
                                  asp-area="HR" asp-controller="Employees" asp-action="Restore" asp-route-id="@e.Id">
                                @Html.AntiForgeryToken()
                                <button class="btn btn-sm btn-outline-success" type="submit">Restore</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
