@model LeaveRequestCreateVm
@{
    ViewData["Title"] = "New Leave Request";
}

<h2>New Leave Request</h2>

<form method="post" asp-area="HR" asp-controller="LeaveRequests" asp-action="Create">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="EmployeeId" class="form-label"></label>
        <select asp-for="EmployeeId" class="form-select" asp-items="@(ViewBag.EmployeeSelectList as IEnumerable<SelectListItem>)"></select>
        <span asp-validation-for="EmployeeId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Type" class="form-label"></label>
        <select asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<LeaveType>()"></select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="StartDate" class="form-label"></label>
            <input asp-for="StartDate" type="date" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="EndDate" class="form-label"></label>
            <input asp-for="EndDate" type="date" class="form-control" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Reason" class="form-label"></label>
        <textarea asp-for="Reason" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Reason" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button class="btn btn-primary" type="submit">Submit</button>
        <a class="btn btn-outline-secondary" asp-area="HR" asp-controller="LeaveRequests" asp-action="Index">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
